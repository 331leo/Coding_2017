
#include<stdio.h>
#include<string.h>
#define PENSION "㉬"
#define BUILDING "㉥"
#define HOTEL "㉭"

typedef struct city {
	char city_name[9];	//도시 이름
	int owner;			//땅주인
	int pension;		//팬션 유무
	int building;		//빌딩 유무
	int hotel;			//호텔 유무
	int landmark;		//랜드마크 유무
	int toll;			//통행료
	int land_price;		//땅값
	int pension_price;	//팬션 건설비
	int building_price; //빌딩 건설비
	int hotel_price;	//호텔 건설비
	int landmark_price; //랜드마크 건설비

}city;

void print_UI()
{
	/*
	모서리→ 상파울루 → 시드니 → 븟산 → 하와이 → 마드리드 → 모서리
	↑															   ↓
	베를린														  파리
	↑															   ↓
	취리히														  로마
	↑															   ↓
	스톡홀름													  런던
	↑															   ↓
	코펜하겐													  뉴욕
	↑ 															   ↓
	아테네														  서울
	↑															   ↓
	모서리 ← 싱가포르 ← 제주도 ← 마닐라 ← 홍콩 ← 타이페이 ← 모서리
	*/
	/*☆☆☆팬션㉬, 빌딩㉥, 호텔㉭, 랜드마크㉣*/

	printf("┌────┬────┬────┬────┬────┬────┬────┐\n");
	printf("│모서리임│상파울루│ 시드니 │  부산  │ 하와이 │마드리드│모서리임│\n");
	printf("│X X X X │        │        │        │        │        │        │\n");
	printf("├────┼────┴────┴────┴────┴────┼────┤\n");
	printf("│ 베를린 │                                                │  파리  │\n");
	printf("│        │                                                │        │\n");
	printf("├────┤                                                ├────┤\n");
	printf("│ 취리히 │                                                │  로마  │\n");
	printf("│        │                                                │        │\n");
	printf("├────┤                                                ├────┤\n");
	printf("│스톡홀름│                                                │  런던  │\n");
	printf("│        │                                                │        │\n");
	printf("├────┤                                                ├────┤\n");
	printf("│코펜하겐│                                                │  뉴욕  │\n");
	printf("│        │                                                │        │\n");
	printf("├────┤                                                ├────┤\n");
	printf("│ 아테네 │                                                │  서울  │\n");
	printf("│        │                                                │        │\n");
	printf("├────┼────┬────┬────┬────┬────┼────┤\n");
	printf("│모서리임│싱가포르│ 제주도 │ 마닐라 │  홍콩  │타이페이│모서리임│\n");
	printf("│        │        │        │        │        │        │        │\n");
	printf("└────┴────┴────┴────┴────┴────┴────┘\n");
}

